{% extends "@ezdesign/ui/layout.html.twig" %}

{% block title %}{{'maintenance.manage.for'|trans({'%siteaccess%': maintenance_siteaccess}, 'nova_ezmaintenance')}}{% endblock %}
{%- block breadcrumbs -%}
    {% include '@ezdesign/ui/breadcrumbs.html.twig' with { items: [
        { value: 'maintenance.home'|trans({}, 'nova_ezmaintenance'), url: path('novamaintenance_index') },
        { value: 'maintenance.admin.title'|trans({}, 'nova_ezmaintenance') }
    ]} %}
{%- endblock -%}

{%- block page_title -%}
    {% include '@ezdesign/ui/page_title.html.twig' with {
        title: 'maintenance.admin.title'|trans({}, 'nova_ezmaintenance'),
        iconName: 'content-type'
    } %}
{%- endblock -%}
{%- block content -%}
    <section class="container mt-4">
        <div class="ez-table-header">
            <div class="ez-table-header__headline">{{ 'maintenance.manage.for'|trans({'%siteaccess%': maintenance_siteaccess}, 'nova_ezmaintenance') }}</div>
        </div>
        {{ form_start(form) }}
        <table class="table ez-table--list">
            <tfoot>
            <tr>
                <td colspan="2">
                    <div class="form-actions">
                        {{ form_widget(form.submit, { label: btnLabel}) }}
                    </div>
                </td>
            </tr>
            </tfoot>
        </table>
        {{ form_row(form._token) }}
        {{ form_end(form, {'render_rest': false}) }}
    </section>
{%- endblock -%}

